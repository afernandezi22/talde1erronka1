/* Estilos para las pantallas mas peque√±as que 768px */
@media screen and (max-width: 768px) {
    .content

    .navbar {
        display: none;
    }

    table {
        overflow: auto;
        width: 100%;
        padding: 0;
    }

    th, td, .footer {
        padding: 5px;
        font-size: 12px;
    }

    th {
        background-color: #d3d3d3;
    }

    .sidebar {
        height: 100%;
        width: 0;
        position: fixed;
        z-index: 1;
        top: 0;
        left: 0;
        background-color: #333;
        overflow-x: hidden;
        transition: 0.5s;
        padding-top: 60px;
    }

    .close-button {
        position: absolute;
        top: 20px;
        left: 10px;
        font-size: 30px;
        color: white;
    }
}

/* Estilos para las pantallas mas grandes que 768px */
@media screen and (min-width: 769px){
    .navbar {
        display: flex;
        color: white;
        padding: 10px;
        justify-content: flex-end;
    }
    .navbar a {
        margin-right: 20px;
        text-decoration: none;
        color: white;
    }
}

